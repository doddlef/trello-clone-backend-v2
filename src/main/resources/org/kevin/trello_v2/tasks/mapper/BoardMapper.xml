<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.kevin.trello_v2.tasks.mapper.BoardMapper">
    <sql id="BaseColumnList">
        id, title, description, closed, created_at, updated_at, created_by, archived
    </sql>

    <resultMap id="BoardResultMap" type="org.kevin.trello_v2.tasks.model.Board">
        <id property="id" column="id" />
        <result property="title" column="title" />
        <result property="description" column="description" />
        <result property="closed" column="closed" />
        <result property="createdAt" column="created_at" javaType="java.time.LocalDateTime" />
        <result property="updatedAt" column="updated_at" javaType="java.time.LocalDateTime" />
        <result property="createdBy" column="created_by" />
        <result property="archived" column="archived" />
    </resultMap>

    <select id="search" resultMap="BoardResultMap">
        SELECT <include refid="BaseColumnList" />
        FROM boards
        <where>
            <if test="ids != null and ids.size() > 0">
                id IN
                <foreach item="id" collection="ids" open="(" separator="," close=")">
                    #{id}
                </foreach>
            </if>
            <if test="isArchived != null">
                AND archived = #{isArchived}
            </if>
        </where>
    </select>

    <select id="findById" resultMap="BoardResultMap">
        SELECT <include refid="BaseColumnList" />
        FROM boards
        WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="org.kevin.trello_v2.tasks.mapper.queries.BoardInsertQuery">
        INSERT INTO boards (
            <include refid="BaseColumnList" />
        ) VALUES (
            #{id}, #{title}, #{description}, DEFAULT, DEFAULT, DEFAULT, #{createdBy}, DEFAULT
        )
    </insert>

    <update id="updateById" parameterType="org.kevin.trello_v2.tasks.mapper.queries.BoardUpdateQuery">
        UPDATE boards
        <set>
            <if test="title != null">title = #{title},</if>
            <if test="description != null">description = #{description},</if>
            <if test="closed != null">closed = #{closed},</if>
            <if test="archived != null">archived = #{archived},</if>
        </set>
        <where>
            id = #{id}
        </where>
    </update>
</mapper>